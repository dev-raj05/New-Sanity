---

import { VisualEditing } from '@sanity/astro/visual-editing';
import "../styles/global.css";

export type props = {
  title: string
}

const visualEditingEnabled = import.meta.env.PUBLIC_SANITY_VISUAL_EDITING_ENABLED === 'true';
---

<!doctype html>
<html lang="en">
  <head>
    <title>{"title"}</title> 
  </head>
  <body class="flex flex-col">
    <div>
      <!-- <Navbar2 /> -->
      <div class="flex flex-col min-h-screen mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 container">
        <main class="flex-grow sm:px-6 lg:px-8">
          <slot />
          <VisualEditing enabled={visualEditingEnabled} zIndex={1000} />
        </main>
      </div>
      <!-- <Cta /> -->
      <!-- <Footer /> -->
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
